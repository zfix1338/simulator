<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogCardDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivCardLargeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Card large image"/>

    <TextView
        android:id="@+id/tvCardLargeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvCardLargeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvCardOwnershipNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус владения"
        android:textColor="#FF0000"
        android:layout_marginTop="8dp"/>
</LinearLayout>