<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Нижняя панель кнопок -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">
        <!-- colekcia -->
      <com.google.android.material.button.MaterialButton
       android:id="@+id/btnCards"
       style="@style/Widget.Material3.Button.TonalButton"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="Коллекция"
       app:icon="@mipmap/ic_collection" />
        <!-- Заказы -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrders"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Заказы"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/holo_blue_dark" />

        <!-- Обновить -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefresh"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Обновить"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/holo_green_dark" />

        <!-- Доставить -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeliver"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Доставить"
            android:enabled="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/holo_orange_dark" />
    </LinearLayout>

    <!-- центрирование положения -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Центрировать"
        android:src="@android:mipmap/ic_menu_mylocation" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>